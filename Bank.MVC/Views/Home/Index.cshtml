<script>
    function convertCurrency(type) {
        const sellInput = document.getElementById('sellInput');
        const buyInput = document.getElementById('buyInput');
        const buyOption = document.getElementById('buyOption');

        const exchangeRates = {
            USD: 1.0,
            AZN: 1.7,
            RUB: 0.02,
            EUR: 1.85
        };

        const selectedCurrency1 = document.getElementById('js-selectric-currency-1');
        const selectedCurrency2 = document.getElementById('js-selectric-currency-2');

        const selectedCurrencyValue1 = selectedCurrency1.options[selectedCurrency1.selectedIndex].value;
        const selectedCurrencyValue2 = selectedCurrency2.options[selectedCurrency2.selectedIndex].value;

        if (type === 'sell') {
            buyInput.value = (sellInput.value * exchangeRates[selectedCurrencyValue1] / exchangeRates[selectedCurrencyValue2] || 0).toFixed(2);
            buyOption.style.display = 'block';  // Show the "Alıram" (buy) option
        } else {
            sellInput.value = (buyInput.value / exchangeRates[selectedCurrencyValue1] * exchangeRates[selectedCurrencyValue2] || 0).toFixed(2);
        }
    }

    // Hiding the "Alıram" (buy) option initially
    document.getElementById('buyOption').style.display = 'none';

    // Initialize the conversion
    convertCurrency('sell');
</script>






