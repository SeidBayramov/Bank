                                            </ul>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">FAQ</a>
                                            <ul>
                                                <li><a asp-action="Index" asp-controller="FAQ">FAQ's</a></li>
                                            </ul>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">Apply Now</a>
                                            <ul>
                                                <li><a asp-action="Index" asp-controller="Loan">Personal Loan</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a href="contact.html">Get In Touch</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="main-menu-style1-right">
                                <div class="header-btn-one">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        
                                        <li class="active"><a asp-action="Index" asp-controller="Home" >@User.Identity.Name</a></li>
                                        <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
                                     
                                    }
                                    else
                                    {
                                        <div class="main-menu-style1-right">
                                            <div class="header-btn-one">
                                                <a asp-action="Login" asp-controller="Account">
                                                    <span class="icon-home-button"></span>Login
                                                </a>
                                                <a class="style2" asp-action="Register" asp-controller="Account">
                                                    <span class="icon-payment"></span>Open an Account
                                                </a>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </nav>

            @RenderBody()


