@{
    ViewBag.Title = "Confirmation";
  }

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Confirmation</h2>
            @if (ViewBag.ConfirmationMessage != null)
            {
                <p class="card-text">@ViewBag.ConfirmationMessage</p>
            }
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Home</a>
        </div>
    </div>
</div>
