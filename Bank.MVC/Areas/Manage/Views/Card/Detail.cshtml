@using Bank.Core.Entities.Models
@model Card

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h4 class="mb-1">Product Title: </h4>
            <h3>@Model.Title</h3>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Card Features: </h4>
            <h3>
                @{
                    int countColor = 0;
                }
                @foreach (var item in Model.CardFeatures)
                {
                    countColor++;
                    @(Model.CardFeatures.Count() != countColor ? item.Feature.Title + ", " : item.Feature.Title + "")
                }
            </h3>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Product Brand: </h4>
            <h3>@Model.Category.Name</h3>
        </div>
        <div class="col-md-6">
            <h4>Product Is in Stock: </h4>
            <h3>@(Model.IsInStock ? "In Stock" : "Out of Stock")</h3>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Product Description: </h4>
            <p style="font-size: 15px">@Model.Description</p>
        </div>
    </div>

    <h4 class="mt-4">Product Images:</h4>
    <div class="row align-items-start">
        @foreach (var item in Model.CardImages.Select(x => x.ImageUrl).ToList())
        {
            <div class="col-2 mb-3 position-relative">
                <img style="width: 175px; border-radius: 5px;" src="~/Upload/CardImages/@item" />
            </div>
        }
    </div>

    <a asp-controller="Card" asp-action="Table" class="btn btn-secondary mt-5">Go Back</a>

</div>